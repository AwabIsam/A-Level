class node:
    def __init__(self, value = None, address = None):
        self.element = value
        self.address = address
        
        
nullp = -1
size = int(input("Enter the size of your Linked List: "))
linkedlist = [node() for i in range(size)]
startp = -1
freenode = 0

for i in range(size):
    linkedlist[i].address = i + 1
linkedlist[-1].address = nullp


def add(item):
    global startp, freenode
    if freenode != nullp:
        linkedlist[freenode].element = item
        freenode = linkedlist[freenode].address
    else:
        print("Linked List is full can't Add - Overflow")
        
    

def delete(item):
    global startp, freenode
    while True:
        for i in range(size):
            if linkedlist[i].element == item:
                deletionp = i
        else:
            print("Item not Present")
            break
    if deletionp != nullp:
        linkedlist[deletionp].element = None
        freenode = deletionp
            


c = "Y"
while c == "Y" or "y":
    print("\nLinked List")
    print("-----------")
    print("1. Add")
    print("2. Delete")
    print("3. Exit")
    ch = int(input("Enter a choice: "))
    if ch == 1:
        item = int(input("Enter value: "))
        add(item)
        for i in range(len(linkedlist)):
            print(linkedlist[i].element, end=' ')
        for i in range(len(linkedlist)):
            print(linkedlist[i].address, end=' ')
    elif ch == 2:
        item = int(input("Enter element to be removed: "))
        delete(item)
        for i in range(len(linkedlist)):
            print(linkedlist[i].element, end=' ')
        for i in range(len(linkedlist)):
            print(linkedlist[i].address, end=' ')
    elif 3:
            break
