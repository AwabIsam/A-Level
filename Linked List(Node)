class node:
    def __init__(self, value = None, address = None):
        self.element = value
        self.address = address
        
        
nullp = -1
size = int(input("Enter the size of your Linked List: "))
linkedlist = [node() for i in range(size)]
startp = -1
freenode = 0

for i in range(size):
    linkedlist[i].address = i + 1
linkedlist[-1].address = nullp


def add(item):
    global startp, freenode
    if freenode != nullp:
        linkedlist[freenode].element = item
        freenode = linkedlist[freenode].address
    else:
        print("Linked List is full can't Add - Overflow")
        
        
